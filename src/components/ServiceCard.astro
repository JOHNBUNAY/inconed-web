---
interface Props {
  title: string;
  description: string;
  image: string;
  // El icono será un string de HTML (SVG)
  icon?: string; 
}

const { title, description, image, icon } = Astro.props;
---

<a href="/servicios" class="group bg-white rounded-xl shadow-lg overflow-hidden hover:-translate-y-2 transition-all duration-300 border-b-4 border-transparent hover:border-inconed-gold flex flex-col h-full">
  
  <div class="h-52 overflow-hidden relative">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60"></div>

    {icon && (
      <div class="absolute bottom-4 left-6 text-inconed-gold bg-white/10 backdrop-blur-sm p-2 rounded-lg border border-white/20 group-hover:bg-inconed-gold group-hover:text-black transition-colors duration-300">
        <div class="w-6 h-6" set:html={icon} />
      </div>
    )}
  </div>

  <div class="p-6 flex flex-col flex-grow">
    <h3 class="font-oswald text-xl font-bold text-inconed-dark mb-3 group-hover:text-inconed-gold transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 text-sm leading-relaxed mb-6 font-sans flex-grow">
      {description}
    </p>
    
    <div class="w-full h-px bg-gray-100 mb-4 group-hover:bg-inconed-gold/30 transition-colors"></div>

    <span class="text-inconed-gold text-xs font-bold uppercase tracking-widest flex items-center gap-2 self-start">
      Más Información 
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </span>
  </div>
</a>